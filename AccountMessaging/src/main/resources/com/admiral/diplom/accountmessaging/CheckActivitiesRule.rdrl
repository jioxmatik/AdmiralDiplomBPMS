package com.admiral.diplom.accountmessaging;

import java.util.Date;

rule "CheckActivitiesRule"
	dialect "mvel"
	when
		Account( $accId : id != null )
		act : Activity( account_id == ( $accId ) , last_day.time <= ( (new Date()).getTime() - (15*24*3600000) ) )
	then
		Message fact0 = new Message();
		fact0.setId( "3" );
		fact0.setDescription( "email call meeting" );
		fact0.setAccount_id( $accId );
		insert( fact0 );
end
